@{
    ViewData["Title"] = "Jobs";
}

@model List<JobSearch.Models.JobModel>

<h1>Job Applications</h1>
<p>
    <a asp-action="AddJob">Add new job application</a>
</p>
<table class="table">
    <thead>
        <tr>
            <td>ID</td>
            <td>Företag</td>
            <td>Position</td>
            <td>Plats</td>
            <td>Datum</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    @{
        foreach(var job in Model){
            <tr>
                <td>@job.Id</td>
                <td>@job.Company</td>
                <td>@job.Position</td>
                <td>@job.Location</td>
                <td>@job.Date</td>
                <td>@Html.ActionLink("Edit", "EditJob", new { id=@job.Id})</td>
                <td>@Html.ActionLink("Delete", "Delete", new { id = @job.Id })</td>
            </tr>
        }
    }
    
</table>

<p>Amount of job applications: @ViewBag.nrOfJobs</p>